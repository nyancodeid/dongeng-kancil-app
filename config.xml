<?xml version='1.0' encoding='utf-8'?>
<widget id="id.web.nyancode" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Dongeng Kancil Apps</name>
    <description>
        Aplikasi Dongeng dengan Tokoh utama Kancil yang Cerdik
    </description>
    <author email="putricayankawan@gmail.com" href="http://nyancode.web.id">
        Putri Dinda T.
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />

    <preference name="KeepRunning" value="true"/>
    <preference name="FadeSplashScreen" value="true"/>
    <preference name="KeyboardDisplayRequiresUserAction" value="true"/>
    <preference name="MediaPlaybackRequiresUserAction" value="false"/>
    <preference name="DisallowOverscroll" value="true"/>
    <preference name="Orientation" value="default"/>
    <preference name="Fullscreen" value="false"/>
    
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
